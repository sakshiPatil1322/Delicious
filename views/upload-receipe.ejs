    <main>
        <div class="recform">
            <div class="recform-container">
                <h2>Share Your Recipe</h2>
                <div class="places">
                    <form method="post" action="/upload" enctype="multipart/form-data">
                        <!-- receipe name -->
                        <div class="form-group">
                            <label>Recipe Name</label>
                            <input type="text" name="recipe_name" placeholder="Enter recipe name">
                        </div>
                        <!-- dish type -->

                        <div class="form-group">
                            <label for="dishType">Dish Type</label>
                            <select id="dishType" name="dish_type">
                                <option value="" disabled selected>Select your dish type</option>
                                <option value="appetizer">Appetizers/Starter</option>
                                <option value="main_course">Soups</option>
                                <option value="dessert">Salads</option>
                                <option value="dessert"> Main Course (Vegetarian)</option>
                                <option value="dessert">Main Course (Non-Vegetarian)</option>
                                <option value="dessert">Rice Dishes</option>
                                <option value="dessert">Pasta & Noodles</option>
                                <option value="dessert">Breads</option>
                                <option value="dessert">Desserts</option>
                                <option value="dessert">Snacks</option>
                                <option value="dessert">Side Dishes</option>
                                <option value="dessert">Beverages</option>
                                <option value="dessert">Sauces/Dips</option>
                                <option value="dessert">Other</option>
                            </select>
                        </div>

                        <!-- preparation time -->
                        
                        <div class="form-group">
                            <label>Preparation time</label>
                            <input type="text" name="preparation_time" placeholder="ex: 20min">
                        </div>
                        <div class="form-group">
                            <label>No. of Servings</label>
                            <input type="text" name="no_of_servings" placeholder="ex: 4">
                        </div>
                        <div class="form-group">
                            <label>Cooking Time</label>
                            <input type="text" name="cooking_time" placeholder="ex: 40min">
                        </div>
                        <div class="form-group">
                            <label>Shelf life</label>
                            <input type="text" name="shelf_life" placeholder="enter in hr">
                        </div>
                        
                        <!-- Image Drop Area -->
                        <div class="form-group">
                            <label>Recipe Images</label>
                            <div class="image-drop-area" id="imageDropArea">
                                <p>Drag & Drop Images Here or Click to Upload</p>
                                <input type="file" id="imageUpload" name="recipe_images" accept="image/*" multiple>
                            </div>
                        </div>                        
                        <!-- ingrediant -->

                        <div class="ingredients-section">
                            <div class="ingredient-input-container">
                                <label for="ingredientInput">Ingredients</label>
                                <input type="text" id="ingredientInput" placeholder="Enter an ingredient">
                                <button type="button" id="addIngredientBtn">Add</button>
                            </div>
                            <ul id="ingredientsList"></ul>
                            <input type="hidden" name="ingredients" id="ingredientsField">
                        </div>

                        <!-- step of receipe -->
                        
                        <div class="steps-section">
                            <div class="step-input-container">
                                <label for="stepInput">Recipe Steps</label>
                                <input type="text" id="stepInput" placeholder="Enter a step">
                                <button type="button" id="addStepBtn">Add</button>
                            </div>
                            <ul id="stepsList"></ul>
                            <input type="hidden" name="steps" id="stepsField">
                        </div>
                        <!-- name -->
                        <div class="form-group">
                            <label>Your Name</label>
                            <input type="text" name="your_name" placeholder="Enter your name">
                        </div>
                        <!-- email id -->
                        <div class="form-group">
                            <label>Email Id</label>
                            <input type="text" name="email" placeholder="Enter email">
                        </div>

                        <button type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
