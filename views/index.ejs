    <!-- ##### Hero Area Start ##### -->
    <section class="hero-area">
        <div class="hero-slides owl-carousel">
            <!-- Single Hero Slide -->
            <div class="single-hero-slide bg-img" style="background-image: url(img/bg-img/bg1.jpg);">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="hero-slides-content" data-animation="fadeInUp" data-delay="100ms">
                                <h2 data-animation="fadeInUp" data-delay="300ms">Share Your Best Recipe with the World!</h2>
                                <p data-animation="fadeInUp" data-delay="700ms">Have a recipe that everyone loves? Don't keep it a secret—share it with our community! Whether it's your signature dish or a family favorite, we want to showcase it.</p>
                                <a href="upload-receipe.ejs" class="btn delicious-btn" data-animation="fadeInUp" data-delay="1000ms">Upload Your Recipe Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>            

            <!-- Single Hero Slide -->
            <div class="single-hero-slide bg-img" style="background-image: url(img/bg-img/bg5.jpg);">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="hero-slides-content" data-animation="fadeInUp" data-delay="100ms">
                                <h2 data-animation="fadeInUp" data-delay="300ms">Share Your Best Recipe with the World!</h2>
