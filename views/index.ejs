                    </div>
                </div>
            </div>
            
        </div>
    </section>
    <!-- ##### Hero Area End ##### -->


    <!-- ##### Best Receipe Area Start ##### -->
    <section class="best-receipe-area"style="width: 100%;">
        <div class="container"style="width: 100%;">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <h3>The best Recipes</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <% events.forEach((event)=> { %>
                    <!-- <div class="col-12 col-sm-6 col-lg-4"> -->
                        <div class="single-best-receipe-area mb-30 shadow padding height1"style="width:360px;margin-left:20px;align-items:center;">
                            <% if (event.images && event.images.length> 0) { %>
                                <!-- Use the file path to load the image -->
                                <img src="/<%= event.images[0].filePath %>" alt="Recipe Image" style="height: 350px;">
                                <% } else { %>
                                    <!-- Default/fallback image if no image is available -->
                                    <img src="/path-to-default-image.jpg" alt="No image available"
                                        style="height: 350px;">
                                    <% } %>

                                        <a href="receipe-post.ejs/<%= event.receipeName %>" id="receName">
                                            <h3 style="margin-top: 2px;">
                                                <%= event.receipeName %>
                                            </h3>
                                        </a>
                                        <div class="get">                                      
                                        <span>
                                            <%= new Date(event.createdAt).toLocaleDateString('en-US', { year: 'numeric' ,
                                                month: 'long' , day: '2-digit' }) %>
                                        </span>
                                        <div class="accbtn">
                                        <a href="receipe-post.ejs/<%= event.receipeName %>" id="accept">
                                            <h6>
                                                Show Receipe
                                            </h6>
                                        </a>
                                    </div>
                                    </div>

                        </div>
                    <!-- </div> -->
                    <!-- <div class="padding"></div> -->
                    <% }) %>
            </div>
        </div>
    </section>


    <!-- ##### Small Receipe Area Start ##### -->
    <section class="small-receipe-area ">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <h3>Some Receipies</h3>
                    </div>
                </div>
            </div>

            <div class="row">

                <!-- Small Receipe Area -->

                <% receipe.forEach(receip=> { %>
                    <div class="col-12 col-sm-6 col-lg-4  padding" style="width: 350px;">
                        <div class="single-small-receipe-area d-flex height align-items-center shadow padding" style="height: 100px;">
                            <!-- Receipe Thumb -->
                            <div class="receipe-thumb">
                                <!-- <img src="img/bg-img/sr1.jpg" alt=""> -->
                                <img src="/<%= receip.images[0].filePath %>" alt="Recipe Image" style="height: 82px;">
                            </div>
                            <!-- Receipe Content -->
                            <div class="receipe-content">
                                <span>
                                    <%= new Date(receip.createdAt).toLocaleDateString('en-US', { year: 'numeric' ,
                                        month: 'long' , day: '2-digit' }) %>
                                </span>
                                <a href="receipe-post.ejs/<%= receip.receipeName %>" id="receName">
                                    <h5>
                                        <%= receip.receipeName %>
                                    </h5>
                                </a>
                                <div class="accbtn1">
                                    <a href="receipe-post.ejs/<%= receip.receipeName %>" id="accept">
                                        <p>
                                            Show Receipe
                                        </p>
                                    </a>
                                </div>
                                <p>2 Comments</p>
                            </div>
                        </div>
                    </div>
                    <% }) %>


                        <!-- Small Receipe Area -->
            </div>
        </div>
    </section>
    <!-- ##### Small Receipe Area End ##### -->

